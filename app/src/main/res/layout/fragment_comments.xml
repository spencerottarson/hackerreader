<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.comments.CommentsFragment">

    <ListView
        android:id="@+id/commentListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_scrim_background"
        >

        <ImageView
            android:id="@+id/commentListViewPreviousButton"
            android:contentDescription="@string/previous_top_level_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_expand_less_white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            />

        <ImageView
            android:id="@+id/commentListViewNextButton"
            android:contentDescription="@string/next_top_level_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_expand_more_white"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingStart="60dp"
            android:paddingEnd="60dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
