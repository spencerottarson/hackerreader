<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="List_Item_Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColorDarkMode</item>
    </style>

    <style name="List_Item_Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorLightDarkMode</item>
    </style>

    <style name="List_Item_Domain">

        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorLightDarkMode</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="List_Item_Comments">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="Comment_Item_Heading">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/textColorLightDarkMode</item>
    </style>

    <style name="Comment_Item_Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColorDarkMode</item>
    </style>

</resources>
